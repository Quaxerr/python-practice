# This function computes factorial using recursion.

def factorial_recursive(n):
    # Base case: factorial of 0 or 1 is 1
    if n == 0 or n == 1:
        return 1
    # Recursive case: n times the factorial of (n-1)
    else:
        return n * factorial_recursive(n - 1)

# Exampleof how its used
n = 5
print(f"Factorial of {n} is", factorial_recursive(n))
